
PORT=3500
PW_SALT=10

#jwt access/refresh secrets
# generate JWT secrets in node via cli `require('crypto').randomBytes(64).toString('hex')`
JWT_ACCESS_SECRET=CHANGE_ME_access_run_require_crypto_randomBytes_64_toString_hex
JWT_REFRESH_SECRET=CHANGE_ME_refresh_run_require_crypto_randomBytes_64_toString_hex
JWT_ACCESS_LIFE=5s
JWT_REFRESH_LIFE_SHORT=2m
JWT_REFRESH_LIFE_LONG=10m
# cookie life is ms
COOKIE_LIFE_SHORT=120000
COOKIE_LIFE_LONG=600000
#for db seeding
test_username=testuser
test_email=test@test.com
test_password=test
